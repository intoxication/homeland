<%
team = notification.second_target
team_user = notification.target
%>
<% if team.blank? || team_user.blank? %>
  <div class="media-body">Related information has been deleted</div>
<% else %>
  <div class="media-heading">
    Invite you to join <%= user_name_tag(team) %>
  </div>
  <div class="media-content summary markdown">
    <%= link_to 'View invitations', main_app.user_team_user_path(team, team_user), class: 'btn btn-default btn-sm' %>
  </div>
<% end %>
