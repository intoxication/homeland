<div class="row">
  <%= render 'menu' %>

  <div class="col-md-8">
    <div class="alert alert-warning">note! You will need to log in again after updating your password.</div>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= simple_form_for(@user, url: setting_path, html: { method: :put }) do |f| %>
          <%= render "shared/error_messages", target: @user %>
          <input type="hidden" name="by" value="password" />
          <%= f.input :current_password %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <div class="form-actions hide-ios">
            <%= f.submit t("users.update_password"), class: "btn btn-lg btn-success", 'data-disable-with' => t("common.saving") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
