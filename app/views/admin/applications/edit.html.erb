<% content_for :sitemap do %>
  <a href="<%= admin_applications_path %>">OAuth application</a> <i class="fa fa-angle-right"></i> <span class="current">edit</span>
<% end %>

<%= simple_form_for([:admin, @application], url: admin_application_path(@application)) do |f| %>
  <%= render "/shared/error_messages", target: @application %>
    <%= f.input :name %>
    <%= f.input :redirect_uri %>
    <%= f.input :level %>

    <div class="form-actions">
      <%= f.submit "save", class: "btn btn-primary", 'data-disable-with' => "Saving..." %>
      <%= link_to 'cancel', admin_applications_path, class: "btn" %>
      <span class="pull-right">
        <%= link_to "delete", admin_application_path(@application.id), class: 'btn btn-danger', method: :delete, 'data-confirm' => 'You sure you want to delete it?' %>
      </span>
    </div>
<% end %>
