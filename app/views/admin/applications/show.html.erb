<% content_for :sitemap do %>
  <a href="<%= admin_applications_path %>">OAuth application</a> <i class="fa fa-angle-right"></i> <span class="current">Details</span>
<% end %>

<ul class="list-group">
  <li class="list-group-item">
    <label class="col-sm-1">name:</label> <%= @application.name %></li>
  <li class="list-group-item">
    <label class="col-sm-1">Uid:</label> <%= @application.uid %></li>
  <li class="list-group-item">
    <label class="col-sm-1">Secret:</label> <%= @application.secret %></li>
  <li class="list-group-item">
    <label class="col-sm-1">founder:</label> <%= user_name_tag(@application.owner) %></li>
  <li class="list-group-item">
    <label class="col-sm-1">User volume:</label> <%= @application.access_tokens.count %></li>
  <li class="list-group-item">
    <label class="col-sm-1">Level:</label> <%= @application.level %></li>
</ul>

<div class="toolbar">
  <%= link_to 'modify', edit_admin_application_path(@application), class: "btn btn-sm btn-success" %>
  <%= link_to 'return', admin_applications_path, class: "btn btn-sm btn-default" %>
</div>
